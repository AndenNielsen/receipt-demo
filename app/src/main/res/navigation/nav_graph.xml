<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.demo.receipt.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_receiptDetailsFragment"
            app:destination="@id/receiptDetailsFragment">
            <argument
                android:name="imageUri"
                app:argType="android.net.Uri" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/receiptDetailsFragment"
        android:name="com.demo.receipt.ReceiptDetailsFragment"
        android:label="receipt_details_fragment"
        tools:layout="@layout/receipt_details_fragment" />
</navigation>